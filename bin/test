#!/usr/bin/env ruby

require "bundler/setup"
require "very_good"

require "pry"
require "pry-stack_explorer"

VeryGood.start do |terminal|
  state = terminal.state

  newState = state.set(0, 0, VeryGood::Cell.new("x", color: VeryGood::COLORS[:blue]))

  terminal.state = newState
  terminal.update!
  sleep 2
end
